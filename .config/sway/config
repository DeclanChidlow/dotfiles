# Declan "Vale" Chidlow's personal configuration file for SwayWM
# https://github.com/DeclanChidlow/dotfiles
# https://vale.rocks

## Variables
#
	set $mod Mod4
	set $term kitty
	set $fileman $term -e vifm
	set $menu bemenu-run -p Û∞çâ -i -H 20 --fn "pango:Lexend Deca 9" --fb "$black" --ff "$blue" --nb "$black" --nf "$bright_white" --tb "$black" --hb "$black" --tf "$magenta" --hf "$magenta" --nf "$bright_white" --af "$bright_white" --ab "$black"
	set $lock 'swaylock -F -f'

## Input configuration
#
	input type:touchpad {
        tap enabled
		middle_emulation enabled
		left_handed enabled
	}
    
	input type:keyboard {
		xkb_layout us
		xkb_variant colemak_dh
	}

## Key bindings
#
    # Start predetermined programs
    bindsym $mod+Return exec $term
    bindsym $mod+Shift+Return exec $fileman

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Kill Notifications
    bindsym $mod+delete exec dunstctl close

    # Start your launcher
    bindsym $mod+q exec $menu

    floating_modifier $mod inverse

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit Sway
    bindsym $mod+Shift+e exec swaynag -t warning -m 'Are you sure you want to exit sway?' -B 'Yes' 'swaymsg exit'

## Navigation
#
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

## Workspaces:
#
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    
	# Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

## Layout stuff:
#
    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

## Resizing containers:
#
	bindsym $mod+r mode "resize"

	mode "resize" {
    	bindsym Left resize shrink width 10px
 	   bindsym Shift+Left resize shrink width 20px
 	   bindsym Down resize shrink height 10px
 	   bindsym Shift+Down resize shrink height 20px
 	   bindsym Up resize grow height 10px
 	   bindsym Shift+Up resize grow height 20px
 	   bindsym Right resize grow width 10px
 	   bindsym Shift+Right resize grow width 20px

 	   # Return to default mode
 	   bindsym Return mode "default"
 	   bindsym Escape mode "default"
	}

## Keyboard control buttons
#
	# F1
	bindsym --locked XF86AudioMute exec amixer set Master toggle
	bindsym --locked Shift+XF86AudioMute exec $term -e amixer
	# F2
	bindsym --locked XF86AudioLowerVolume exec amixer set Master 1%-
	bindsym --locked Shift+XF86AudioLowerVolume exec amixer set Master 10%-
	# F3
	bindsym --locked XF86AudioRaiseVolume exec amixer set Master 1%+
	bindsym --locked Shift+XF86AudioRaiseVolume exec amixer set Master 10%+
	# F4
	bindsym --locked XF86AudioPrev exec mpc prev
	bindsym --locked Shift+XF86AudioPrev exec playerctl previous
	# F5
	bindsym --locked XF86AudioPlay exec mpc toggle
	bindsym --locked Shift+XF86AudioPlay exec playerctl play-pause
	# F6
	bindsym --locked XF86AudioNext exec mpc next
	bindsym --locked Shift+XF86AudioNext exec playerctl next
	# F7
	bindsym --locked XF86MonBrightnessDown exec xbacklight -dec 1
	bindsym --locked Shift+XF86MonBrightnessDown exec xbacklight -dec 10
	# F8
	bindsym --locked XF86MonBrightnessUp exec xbacklight -inc 1
	bindsym --locked Shift+XF86MonBrightnessUp exec xbacklight -inc 10
	# F11
	bindsym Print exec sway-screenshot -o /home/vale/Pictures/screenshots -m output 
	bindsym Shift+Print exec sway-screenshot -o /home/vale/Pictures/screenshots -m region
	bindsym Ctrl+Print exec mpv --demuxer-lavf-format=video4linux2 --demuxer-lavf-o-set=input_format=mjpeg av://v4l2:/dev/video0
	# F12
	bindsym XF86AudioMedia exec $term -e btop
	bindsym Shift+XF86AudioMedia exec $term -e ncmpcpp

# Aesthetics
	font pango:Lexend Regular 9

	title_align center

	default_border normal 3
	hide_edge_borders both

	set $black #121212

	set $white #B39F91
	set $bright_white #FFEAD0
	
	set $red #EF2F27
	set $bright_red #F75341
	
	set $orange #D75F00
	set $bright_orange #FF8700

	set $yellow #FBB829
	set $bright_yellow #FED06E

	set $green #519F50
	set $bright_green #98BC37

	set $blue #2C78BF
	set $bright_blue #68A8E4

	set $cyan #0AAEB3
	set $bright_cyan #53FDE9

	set $magenta #E02C6D
	set $bright_magenta #FF5C8F
	
	set $gray #4E4E4E
	set $bright_gray #262626

	output "*" bg /home/vale/.config/sway/wallpaper.png fill

## Colors
#							border      background text       indicator  child_border
	client.focused          $black      $black     $yellow    $black     $black
	client.focused_inactive $black      $black     $white     $black     $black
	client.unfocused        $black      $black     $white     $black     $black
	client.urgent           $black      $black     $red       $red       $black
	client.background       $black

## Status bar
#
	bar {
	  status_command yambar
  	mode invisible
	}

## Configure power and locking
#
	bindswitch --reload --locked lid:on exec $lock
	bindsym XF86PowerOff exec $lock
	bindsym $mod+XF86PowerOff exec systemctl poweroff
	bindsym $mod+Shift+XF86PowerOff exec systemctl reboot

## Per program config
#
	exec dunst
	exec firefox
	assign [app_id="firefox"] workspace number 1
	assign [title="Steam"] workspace number 6
	assign [title="Heroic Games Launcher"] workspace number 6
	assign [app_id="org.prismlauncher.PrismLauncher"] workspace number 6
	assign [app_id="virt-manager"] workspace number 9
	exec keepassxc
	assign [app_id="org.keepassxc.KeePassXC"] workspace number 10

## Floating configs
#
	for_window [title="Picture-in-Picture$"] floating enable
	for_window [window_role="pop-up"] floating enable
	for_window [window_role="Pop-up"] floating enable
	for_window [window_role="bubble"] floating enable
	for_window [window_role="Bubble"] floating enable
	for_window [window_role="dialog"] floating enable
	for_window [window_role="Dialog"] floating enable
	for_window [window_type="dialog"] floating enable
	for_window [window_type="Dialog"] floating enable
	for_window [class="dialog"] floating enable
	for_window [class="Dialog"] floating enable
	for_window [window_role="task_dialog"] floating enable
	for_window [window_type="menu"] floating enable
	for_window [window_role="About"] floating enable

include ~/.config/sway/config.d/*.conf
